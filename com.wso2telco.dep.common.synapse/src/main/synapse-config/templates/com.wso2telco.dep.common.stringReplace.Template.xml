<?xml version="1.0" encoding="UTF-8"?>
<template name="com.wso2telco.dep.common.stringReplace.Template" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="searchValue"/>
    <parameter name="newValue"/>
    <parameter name="inputValue"/>
    <parameter name="outputProperty"/>
    <sequence>
        <!-- syntax: outputProperty = inputValue.replaceFirst(searchValue, newValue) -->
        <property name="STRING_REPLACE_SEARCH_VALUE" expression="$func:searchValue" scope="default"/>
        <property name="STRING_REPLACE_NEW_VALUE" expression="$func:newValue" scope="default"/>
        <property name="STRING_REPLACE_INPUT_VALUE" expression="$func:inputValue" scope="default"/>
        <property name="STRING_REPLACE_OUTPUT_PROPERTY" expression="$func:outputProperty" scope="default"/>

        <class name="com.wso2telco.dep.common.mediation.StringReplacingMediator"/>

        <property name="STRING_REPLACE_SEARCH_VALUE" action="remove" scope="default"/>
        <property name="STRING_REPLACE_NEW_VALUE" action="remove" scope="default"/>
        <property name="STRING_REPLACE_INPUT_VALUE" action="remove" scope="default"/>
        <property name="STRING_REPLACE_OUTPUT_PROPERTY" action="remove" scope="default"/>
    </sequence>
</template>
